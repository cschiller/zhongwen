{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
        "webextensions": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "semi": "warn",
        "eqeqeq": 1
    }
}
